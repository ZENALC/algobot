[FORMAT]
max-line-length = 120
extension-pkg-whitelist=PyQt5,QtGui

[DESIGN]
max-attributes=40  # TODO: refactor classes as needed to have default at 7
max-locals=20  # TODO: refactor so it's 15 by default.

[MASTER]
ignore=assets.py
jobs=4

[MESSAGES CONTROL]
disable=
    no-else-return,
    too-many-arguments,
    duplicate-code,
    no-name-in-module,
    no-member,
    import-star-module-level,
    bad-inline-option,
    import-error,
    missing-docstring,
    invalid-name,
    cyclic-import,
    broad-except,
    no-else-break,
    super-with-arguments,
    consider-merging-isinstance,
    protected-access,
    fixme,
    redefined-argument-from-local,
    arguments-differ,
    too-many-public-methods,
    simplifiable-condition,
    arguments-renamed,
    inconsistent-return-statements,
    unused-argument,
    unused-variable,
    unsubscriptable-object,
    too-many-return-statements,
    unnecessary-pass,
    no-self-use,
    too-many-branches,
    consider-using-from-import,
    unused-wildcard-import,
    expression-not-assigned,
    wildcard-import,
    too-many-lines
