[FORMAT]
max-line-length = 120
extension-pkg-whitelist=PyQt5

[DESIGN]
max-attributes=40  # TODO: refactor classes as needed to have default at 7
max-locals=20  # TODO: refactor so it's 15 by default.
max-public-methods=100  # TODO: Refactor classes into smaller classes as needed.

[MASTER]
ignore=assets.py
jobs=4

[MESSAGES CONTROL]
disable=
    no-else-return,
    too-many-arguments,
    duplicate-code,
    arguments-differ,
    missing-docstring,
    invalid-name,
    broad-except,
    import-error,
    fixme,
    arguments-renamed,
    super-with-arguments,
    inconsistent-return-statements,
    unused-argument,
    unnecessary-pass,
    too-many-branches,
    too-many-lines
